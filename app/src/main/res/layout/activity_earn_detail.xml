<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c0"
        android:orientation="vertical">

        <com.lianer.core.custom.TitlebarView
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c1"
            app:centerTitle="@string/my_income"
            app:leftDrawble="@drawable/ic_back" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_32"
                    android:paddingVertical="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contract_address"
                        android:textColor="@color/c8"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_contract_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="-.------------------"
                        android:textColor="@color/c3"
                        android:textSize="@dimen/sp_11" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:background="@drawable/frame_dark_corners_bg"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp_16"
                    android:paddingVertical="@dimen/dp_10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/income_details"
                            android:textColor="@color/c8"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv_time_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@string/countdown_earn"
                            android:textColor="@color/c7"
                            android:textSize="@dimen/sp_11" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_time_tag"
                            android:layout_alignParentRight="true"
                            android:text="-.---------"
                            android:textColor="@color/c13"
                            android:textSize="@dimen/sp_11" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_1"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/c9" />

                    <TextView
                        style="@style/c7t4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_25"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:gravity="left"
                        android:text="@string/dividing_pool" />

                    <TextView
                        android:id="@+id/dividing_pool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:gravity="right"
                        android:text="-.------------------"
                        android:textColor="@color/c5"
                        android:textSize="@dimen/t1" />

                    <TextView
                        style="@style/c7t4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:gravity="left"
                        android:text="@string/available_benefit" />

                    <TextView
                        android:id="@+id/tv_available_eth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:gravity="right"
                        android:text="-.------------------"
                        android:textColor="@color/c5"
                        android:textSize="@dimen/t1" />

                    <TextView
                        style="@style/c7t4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:gravity="left"
                        android:text="@string/total_nest" />

                    <TextView
                        android:id="@+id/tv_conmunity_nest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:gravity="right"
                        android:text="-.------------------"
                        android:textColor="@color/c8"
                        android:textSize="@dimen/t1" />

                    <TextView
                        style="@style/c7t4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:gravity="left"
                        android:text="@string/joined_nest" />

                    <TextView
                        android:id="@+id/tv_joined_nest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:gravity="right"
                        android:text="-.------------------"
                        android:textColor="@color/c8"
                        android:textSize="@dimen/t1" />

                    <Button
                        android:id="@+id/btn_action"
                        style="@style/public_btn_style"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:enabled="false"
                        android:text="@string/receive_income" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="@string/benefit_tips"
                        android:textColor="@color/c7"
                        android:textSize="@dimen/sp_11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/frame_dark_corners_bg"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp_16"
                    android:paddingVertical="@dimen/dp_10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@color/c2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/option_select"
                            android:textColor="@color/c11"
                            android:textSize="@dimen/sp_15" />

                        <LinearLayout
                            android:layout_width="@dimen/dp_160"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/rl_in_port"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="100">

                                <TextView
                                    android:id="@+id/tv_in_port"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="@string/deposit"
                                    android:textColor="@color/c5"
                                    android:textSize="@dimen/sp_15" />

                                <View
                                    android:id="@+id/line_in"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_1"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:background="@color/c5" />
                            </RelativeLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_25"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2"
                                android:background="@color/c9" />

                            <RelativeLayout
                                android:id="@+id/rl_out_port"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="100">

                                <TextView
                                    android:id="@+id/tv_out_port"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="@string/withdraw"
                                    android:textColor="@color/c11"
                                    android:textSize="@dimen/sp_15" />

                                <View
                                    android:id="@+id/line_out"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_1"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:background="@color/c5"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_18"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <TextView
                            android:id="@+id/tv_operate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/deposit_number"
                            android:textColor="@color/c11"
                            android:textSize="@dimen/sp_15" />

                        <EditText
                            android:id="@+id/et_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@null"
                            android:gravity="right"
                            android:hint="@string/saved_number_hint"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColor="@color/c7"
                            android:textColorHint="@color/c7"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_1"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/c9" />

                    <TextView
                        android:id="@+id/tv_nest_amout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="-.------------------"
                        android:textColor="@color/c5"
                        android:textSize="@dimen/sp_12" />

                    <Button
                        android:id="@+id/btn_earn"
                        style="@style/public_btn_style"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:enabled="false"
                        android:text="@string/saved_nest" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="@string/nest_tips"
                        android:textColor="@color/c7"
                        android:textSize="@dimen/sp_11" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:paddingHorizontal="@dimen/dp_17"
                    android:text="@string/dividend_rules"
                    android:textColor="@color/c6"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_marginBottom="@dimen/dp_50"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:paddingHorizontal="@dimen/dp_17"
                    android:text="@string/bonus_notes_tips"
                    android:textColor="@color/c7" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>
