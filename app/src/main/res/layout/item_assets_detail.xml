<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_assets_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c0"
    android:paddingEnd="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_19">

    <TextView
        android:id="@+id/trasaction_time"
        style="@style/c6t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/trasaction_amount"
        style="@style/c4b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_3"
        android:layout_marginRight="@dimen/dp_3" />

    <TextView
        android:id="@+id/transaction_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/reward_bg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/trasaction_amount"
        style="@style/c11t5"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/trasaction_status"
        style="@style/b3_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trasaction_time"
        android:layout_marginTop="@dimen/dp_10" />

    <TextView
        android:id="@+id/trasaction_address"
        style="@style/t3_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/trasaction_status"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_toEndOf="@id/trasaction_status"
        android:layout_toRightOf="@id/trasaction_status"
        android:ellipsize="middle"
        android:maxEms="8"
        android:singleLine="true" />

    <View
        style="@style/c9_horizontal_line"
        android:layout_below="@id/trasaction_status"
        android:layout_marginTop="@dimen/dp_19" />

</RelativeLayout>
