<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/token_logo"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_15"
            android:padding="@dimen/dp_0_5" />

        <TextView
            android:id="@+id/token_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/token_logo"
            android:layout_marginLeft="@dimen/dp_76"
            android:layout_marginStart="@dimen/dp_76"
            android:textColor="@color/clr_111111"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mortgage_assets_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/token_type"
            android:layout_alignStart="@+id/token_type"
            android:layout_below="@+id/token_type"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/clr_999999" />

        <TextView
            android:id="@+id/project_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/token_logo"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginRight="12dp"
            android:background="@drawable/blue_stroke_oval_bg"
            android:text="@string/project_profile"
            android:textColor="@color/clr_00BDFD"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_15">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/compromise"
                    android:textColor="@color/clr_999999" />

                <TextView
                    android:id="@+id/price_to_eth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clr_111111" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="5"
                        android:text="@string/price_to_eth_name"
                        android:textColor="@color/clr_999999" />

                    <TextView
                        android:id="@+id/token_to_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxEms="5"
                        android:text="QUN/ETH"
                        android:textColor="@color/clr_999999"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/mortgage_assets_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clr_111111" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate"
                    android:textColor="@color/clr_999999" />

                <TextView
                    android:id="@+id/discount_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clr_111111" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>
