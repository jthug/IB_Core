<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_all_contract"
        android:layout_width="@dimen/dp_329"
        android:layout_height="@dimen/dp_106"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@drawable/item_market_contract_bg"
        android:fadingEdge="none">

        <ImageView
            android:id="@+id/market_mine_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/market_eth_img"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_17"
            android:src="@drawable/ic_eth" />


        <TextView
            android:id="@+id/market_coins_type"
            android:layout_width="@dimen/dp_46"
            android:layout_height="wrap_content"
            android:text="@string/eth"
            android:textColor="@color/c7"
            android:textSize="11sp"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_58"
            android:background="@drawable/coins_type_bg"
            android:gravity="center"/>


            <TextView
                android:id="@+id/market_value"
                style="@style/b1_style"
                android:layout_width="@dimen/dp_56"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_below="@+id/market_eth_img"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"/>


        <TextView
            android:id="@+id/market_timelimit"
            style="@style/c3b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_10" />

        <TextView
            style="@style/t4_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_toEndOf="@id/market_timelimit"
            android:layout_toRightOf="@id/market_timelimit"
            android:text="@string/days" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_55"
            android:text="@string/mortgaged_assets"
            android:textColor="@color/c11"
            android:textSize="@dimen/t4" />

        <TextView
            android:id="@+id/market_mortgage_amount"
            style="@style/t4_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_75" />


        <TextView
            android:id="@+id/market_interest_rate"
            style="@style/c3b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_226"
            android:layout_marginTop="@dimen/dp_10" />

        <TextView
            style="@style/t4_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_toEndOf="@id/market_interest_rate"
            android:layout_toRightOf="@id/market_interest_rate"
            android:text="@string/market_day" />


        <TextView
            style="@style/c11t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_226"
            android:layout_marginTop="@dimen/dp_55"
            android:text="@string/market_mortgage_rate" />

        <TextView
            android:id="@+id/market_yesterday_value"
            style="@style/t4_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_225"
            android:layout_marginTop="@dimen/dp_75" />


    </RelativeLayout>

</layout>

