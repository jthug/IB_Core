<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_73"
    android:background="@color/c1">

    <ImageView
        android:id="@+id/token_logo"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15" />

    <TextView
        android:id="@+id/token_symbol"
        style="@style/t2_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/token_logo"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@id/token_logo"
        android:layout_toRightOf="@id/token_logo"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/token_name"
        style="@style/c7t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/token_symbol"
        android:layout_toEndOf="@id/token_symbol"
        android:layout_toRightOf="@id/token_symbol" />

    <TextView
        android:id="@+id/token_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/token_logo"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@id/token_logo"
        android:layout_toRightOf="@id/token_logo"
        android:singleLine="true"
        style="@style/c11t5"/>

    <View
        style="@style/c9_horizontal_line"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15" />

    <com.suke.widget.SwitchButton
        android:id="@+id/switch_button"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        app:sb_background="@color/c6"
        app:sb_checked_color="@color/c5"
        app:sb_show_indicator="false"
        app:sb_uncheck_color="@color/c6" />

</RelativeLayout>
