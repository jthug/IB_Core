<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/c0">

    <ImageView
        android:id="@+id/notification_logo"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:padding="@dimen/dp_5"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_nest" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/notification_logo"
        android:layout_toRightOf="@id/notification_logo"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                style="@style/t2_style"
                android:text="标题"/>

            <TextView
                android:id="@+id/notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="16.49"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                style="@style/t4_style" />
        </RelativeLayout>

        <TextView
            android:id="@+id/notification_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            style="@style/t5_style"
            android:text="内容撒发顺丰撒范德萨地方asfadsfadsf"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            />
    </LinearLayout>

</RelativeLayout>