<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c0"
        android:orientation="vertical">

        <com.lianer.core.custom.TitlebarView
            android:id="@+id/titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/c1"
            android:gravity="center"
            app:centerTitle="@string/wallet_setting"
            app:leftDrawble="@drawable/ic_back" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c2"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_12"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                style="@style/t2_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/wallet_address" />

            <TextView
                android:id="@+id/tv_wallet_address"
                style="@style/t3_style"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textIsSelectable="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wallet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c2"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_12"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                style="@style/t2_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/wallet_name" />

            <ImageView
                android:id="@+id/iv_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_wallet_name"
                style="@style/t2_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_right_arrow"
                android:layout_marginRight="@dimen/dp_10"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_modify_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c2"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_12"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_2">

            <TextView
                style="@style/t2_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/update_psd" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_backup_keystore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c2"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_12"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                style="@style/t2_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/backup_keystore" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_export_private_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c2"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_12"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_2">

            <TextView
                style="@style/t2_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/export_private_key" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_delete_wallet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_96"
            android:background="@color/c1"
            android:gravity="center"
            android:text="@string/delete_wallet"
            style="@style/c4t2" />
    </LinearLayout>
</layout>