<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_circle_oval_bg"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/asset_profile"
            android:textColor="@color/clr_111111"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/project_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/project_introduction"
            android:textColor="@color/clr_111111"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:text="@string/token_address"
            android:textColor="@color/clr_111111"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/token_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:textColor="@color/clr_111111"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/token_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:textColor="@color/clr_111111"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/clr_DDDDDD" />

        <TextView
            android:id="@+id/select_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_selector"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/select_project"
            android:textColor="@color/c3"
            android:textSize="@dimen/t1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/clr_DDDDDD" />

        <TextView
            android:id="@+id/copy_token_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_selector"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/copy_token_address"
            android:textColor="@color/c3"
            android:textSize="@dimen/t1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/clr_DDDDDD" />

        <TextView
            android:id="@+id/i_know"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/i_know"
            android:textColor="@color/c3"
            android:textSize="@dimen/t1" />

    </LinearLayout>
</RelativeLayout>
