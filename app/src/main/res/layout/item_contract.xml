<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_assets_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/contract_item_bg">

        <TextView
            android:id="@+id/tv_contract_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/contract_address"
            android:textColor="#8C8C8C"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/contract_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_contract_address"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="middle"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="@color/clr_059EFF"
            android:textSize="13sp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/tv_contract_address"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/clr_DDDDDD" />

        <ImageView
            android:id="@+id/red_vertical_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red_vertical_line"
            android:visibility="gone"
            />

        <com.lianer.core.custom.ShadowImageView
            android:id="@+id/contract_logo"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_43"
            android:layout_alignLeft="@+id/tv_contract_address"
            android:layout_alignStart="@+id/tv_contract_address"
            android:layout_below="@id/view_line"
            android:layout_marginTop="@dimen/dp_15"
            app:shadowRound="@dimen/dp_30"
            app:shadowColor="#1A000000" />

        <TextView
            android:id="@+id/contract_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_toRightOf="@id/contract_logo"
            android:textColor="@color/clr_111111" />

        <TextView
            android:id="@+id/contract_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/contract_type"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/contract_type"
            android:layout_toRightOf="@+id/contract_type"
            android:textColor="@color/clr_111111" />

        <TextView
            android:id="@+id/contract_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/contract_address"
            android:layout_alignRight="@id/contract_address"
            android:layout_alignTop="@+id/contract_type"
            android:textColor="#8C8C8C" />

        <TextView
            android:id="@+id/contract_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/contract_address"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/contract_address"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="#8C8C8C"
            android:textSize="12sp" />

    </RelativeLayout>

</layout>

